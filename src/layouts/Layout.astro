---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import { Footer } from "../components/footer/Footer";
import { ParallaxProvider } from "react-scroll-parallax";
import "../styles/index.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  imageAlt?: string;
}

const { 
  title, 
  description = "Developer Portfolio",
  image = "/img/og-default.jpg",
  imageAlt = "Ehsan Portfolio"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:alt" content={imageAlt} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />
    <meta property="twitter:image:alt" content={imageAlt} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script async defer src="https://scripts.withcabin.com/hello.js"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@500;600;700&display=swap&family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-white dark:bg-neutral-900 text-gray-900 dark:text-gray-100">
    <Header />
    <main class="min-h-screen">
      <slot />
      <Footer client:load />
    </main>
    <script>
      document.addEventListener("astro:after-swap", function () {
        if (localStorage.getItem("theme") === "light") {
          document.documentElement.classList.toggle("dark", false);
        } else {
          document.documentElement.classList.toggle("dark", true);
        }
      });
    </script>
  </body>
</html>
