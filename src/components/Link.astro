---
const { href, text } = Astro.props;
import colors from "tailwindcss/colors";

const buttonLable = Math.random()
  .toString(36)
  .replace(/[^a-z]+/g, "")
  .substr(0, 2);
---

<a
  href={href}
  class="btn relative inline-block hover:shadow-primary-500 font-bold text-primary-600 uppercase text-sm font-tomorrow tracking-wide rounded-lg transition-all border border-primary-600 group hover:bg-primary-600 hover:text-white hover:shadow-sm active:border-primary-100"
>
  <span
    class="flex items-center justify-center px-7 py-4 relative overflow-hidden bg-primary"
  >
    <div class="relative z-20">
      <p
        class="group-hover:-translate-y-10 transform transition-transform duration-[1.125s] ease-[cubic-bezier(0.19,1,0.22,1)]"
      >
        {text}
      </p>
      <p
        class="absolute top-10 left-0 group-hover:top-0 transform all-transform duration-[1.125s] ease-[cubic-bezier(0.19,1,0.22,1)]"
      >
        {text}
      </p>
    </div>
  </span>
  <span
    class="z-10 absolute inset-0 bg-primary hidden group-hover:block glitch-effect"
  ></span>
</a>
<style>
  .btn:hover .glitch-effect {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--primary);
    animation: glitch-animation 1s linear infinite;
  }
</style>
