---
interface Props {
  name: string;
  img: string;
  year: string;
}

const { name, img, year } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
  <img 
    src={img} 
    alt={name}
    class="w-full h-48 object-cover"
  />
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">{name}</h3>
    <p class="text-sm text-gray-600 dark:text-gray-400">Awarded {year}</p>
  </div>
</div>