---
import { getPortfolioData } from '../../utils/data';
import SectionTitle from '../ui/SectionTitle.astro';

const { testimonials } = await getPortfolioData();
---

<section class="py-20 bg-white dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <SectionTitle 
      title="What People Say"
      subtitle="Testimonials from clients and colleagues"
    />
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-gray-50 dark:bg-gray-700 p-8 rounded-lg">
          <p class="text-gray-600 dark:text-gray-300 mb-6">"{testimonial.short}"</p>
          <div class="flex items-center">
            <img 
              src={testimonial.img} 
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover"
            />
            <div class="ml-4">
              <h4 class="font-semibold text-gray-900 dark:text-white">{testimonial.name}</h4>
              <p class="text-sm text-gray-600 dark:text-gray-400">{testimonial.title}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>