---
import { getPortfolioData } from '../../utils/data';
const { contact } = await getPortfolioData();
---

<div>
  <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Connect</h3>
  <div class="flex gap-4">
    {Object.entries(contact.socialLinks).map(([platform, url]) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-500"
      >
        <span class="capitalize">{platform}</span>
      </a>
    ))}
  </div>
</div>