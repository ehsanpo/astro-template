---
import type { HeadingLevel } from './types';
import { getHeadingClass } from './utils';

interface Props {
  level?: HeadingLevel;
  gradient?: boolean;
  shadow?: boolean;
  floating?: boolean;
  class?: string;
}

const { 
  level = 'h2',
  gradient = false,
  shadow = false,
  floating = false,
  class: className = ''
} = Astro.props;

const Tag = level;
const headingClass = getHeadingClass({ gradient, shadow, floating });
---

<Tag class:list={[headingClass, className]}>
  <slot />
</Tag>