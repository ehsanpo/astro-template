---
import type { HeadingLevel } from "./types";
import { getHeadingClass } from "./utils";

interface Props {
  level?: HeadingLevel;
  gradient?: boolean;
  shadow?: boolean;
  floating?: boolean;
  className?: string;
  children?: React.ReactNode;
}

const {
  level = "h2",
  gradient = false,
  shadow = false,
  floating = false,
  className = "",
  children,
} = Astro.props;

const Tag = level;
const headingClass = getHeadingClass({ gradient, shadow, floating });
---

<Tag>
  <span class:list={[headingClass, className]}><slot /></span>
</Tag>
