---
import { getPortfolioData } from '../../utils/data';
const { education } = await getPortfolioData();
---

<div class="space-y-8">
  {education.map((item) => (
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
      <div class="flex justify-between items-start mb-2">
        <div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{item.degree}</h3>
          <p class="text-gray-600 dark:text-gray-400">{item.school}</p>
        </div>
        <span class="text-sm text-primary-600 font-medium">{item.year}</span>
      </div>
      {item.description && (
        <p class="text-gray-600 dark:text-gray-400 mt-2">{item.description}</p>
      )}
    </div>
  ))}
</div>