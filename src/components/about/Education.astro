---
import { getPortfolioData } from "../../utils/data";
const { education } = await getPortfolioData();
---

<div class="space-y-8">
	{
		education.map((item) => (
			<div class="rounded-lg bg-white p-6 shadow-sm dark:bg-neutral-800">
				<div class="mb-2 flex items-start justify-between">
					<div>
						<h3 class="text-xl font-semibold text-gray-900 dark:text-white">{item.degree}</h3>
						<p class="text-gray-600 dark:text-gray-400">{item.institution}</p>
					</div>
					<span class="text-sm font-medium text-primary-600">{item.startDate}</span>
				</div>
				{item.description && (
					<p class="mt-2 text-gray-600 dark:text-gray-400">{item.description}</p>
				)}
			</div>
		))
	}
</div>
