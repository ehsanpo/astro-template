---
import Layout from '../../layouts/Layout.astro';
import PortfolioHeader from '../../components/portfolio/PortfolioHeader.astro';
import Gallery from '../../components/portfolio/Gallery.astro';
import { getPortfolioItems } from '../../utils/data';

export async function getStaticPaths() {
  const portfolioItems = await getPortfolioItems();
  return portfolioItems.map(item => ({
    params: { slug: item.slug },
    props: { item }
  }));
}

const { item } = Astro.props;
---

<Layout title={`${item.title} - Portfolio`}>
  <article class="min-h-screen bg-white dark:bg-gray-900">
    <PortfolioHeader
      title={item.title}
      tagline={item.tagline}
      client={item.client}
      agency={item.agency}
      tags={item.tag}
    />
    
    <div class="max-w-6xl mx-auto px-4">
      <Gallery 
        images={item.bilder} 
        alt={item.title}
      />
      
      <div class="max-w-4xl mx-auto prose dark:prose-invert mb-20">
        <slot />
      </div>
      
      {item.case_link_url && (
        <div class="text-center pb-20">
          <a
            href={item.case_link_url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors"
          >
            Visit Project
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      )}
    </div>
  </article>
</Layout>