---
import Layout from "../../layouts/Layout.astro";
import PageHero from "../../components/hero/PageHero.astro";
import StackCard from "../../components/StackCard";
import SkillChart from "../../components/SkillChart";
import ToolsList from "../../components/skills/ToolsList.astro";
import { ProcessFlowDiagram } from "../../components/Beams";
import { Heading } from "../../components/ui/heading";
import { getPortfolioData } from "../../utils/data";

const { stacks } = await getPortfolioData();

// Filter stacks related to Technical Product Management
const tpmStacks = stacks.filter(stack => 
  ['Front-end', 'Backend', 'Cloud', 'DevOps'].includes(stack.slug)
);

// Create custom skills chart for Technical Product Manager role
const tpmChart = {
  slug: "Technical Product Management",
  labels: ["Product Strategy", "Technical Fluency", "Stakeholder Management", "Roadmap Planning", "Data-Driven Decisions", "Cross-Functional Leadership"],
  data: ["9", "10", "9", "9", "8", "9"]
};
---

<Layout title="Technical Product Manager - Ehsan Pourhadi">
  <PageHero
    title="Technical Product Manager"
    subtitle="Bridging product vision and technical execution with deep engineering fluency."
  />

  <section class="container mx-auto px-4 py-12">
    <div class="mx-auto max-w-4xl">
      <!-- Self-Definition -->
      <div class="mb-16">
        <Heading level="h2" gradient floating backplate client:idle>What I Bring</Heading>
        <p class="text-lg text-gray-700 dark:text-gray-300">
          I speak both product and engineering fluently. With 12+ years of hands-on development experience, 
          I understand technical constraints, architecture decisions, and engineering workflows. This enables me to 
          create realistic roadmaps, make informed trade-offs, and effectively bridge the gap between stakeholders and engineering teams.
        </p>
      </div>

      <!-- Evidence Snippets -->
      <div class="mb-16">
        <Heading level="h2" gradient floating backplate client:idle>Evidence</Heading>
        <div class="space-y-6">
          <div class="rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-800">
            <h3 class="mb-2 text-xl font-semibold text-primary-600 dark:text-primary-400">
              From Experience at Bredband2
            </h3>
            <blockquote class="border-l-4 border-primary-500 pl-4 italic text-gray-700 dark:text-gray-300">
              "Managed the project and team. Contributed to the implementation of new web applications utilizing Gatsby, Next.js, and Ruby on Rails. 
              Worked closely with UX to optimize UI/UX for improved user engagement."
            </blockquote>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Source: Portfolio Experience - Bredband2 (2020-2023)
            </p>
          </div>

          <div class="rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-800">
            <h3 class="mb-2 text-xl font-semibold text-primary-600 dark:text-primary-400">
              Testimonial from Jony Lai (Software Developer)
            </h3>
            <blockquote class="border-l-4 border-primary-500 pl-4 italic text-gray-700 dark:text-gray-300">
              "He played a huge role in making sure we kept our documentation in good shape and pushed our projects forward with clarity and structure. 
              His innovative mindset helped us adopt better tools and practices."
            </blockquote>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Source: Testimonials - Jony Lai
            </p>
          </div>
        </div>
      </div>

      <!-- Outcome Focus -->
      <div class="mb-16">
        <Heading level="h2" gradient floating backplate client:idle>Impact & Outcomes</Heading>
        <div class="grid gap-6 md:grid-cols-2">
          <div class="rounded-lg bg-gradient-to-br from-primary-500/10 to-primary-600/10 p-6">
            <div class="mb-2 text-3xl font-bold text-primary-600 dark:text-primary-400">100,000+</div>
            <div class="text-lg font-semibold text-gray-800 dark:text-gray-200">User Product Launch</div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Led customer portal redesign from concept to launch for six-figure user base
            </p>
          </div>

          <div class="rounded-lg bg-gradient-to-br from-secondary-500/10 to-secondary-600/10 p-6">
            <div class="mb-2 text-3xl font-bold text-secondary-600 dark:text-secondary-400">Cross-Functional</div>
            <div class="text-lg font-semibold text-gray-800 dark:text-gray-200">Team Leadership</div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Coordinated engineering, design, and business stakeholders for successful delivery
            </p>
          </div>

          <div class="rounded-lg bg-gradient-to-br from-blue-500/10 to-blue-600/10 p-6">
            <div class="mb-2 text-3xl font-bold text-blue-600 dark:text-blue-400">Technical Depth</div>
            <div class="text-lg font-semibold text-gray-800 dark:text-gray-200">Architecture Decisions</div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Made informed technical decisions based on deep understanding of system architecture
            </p>
          </div>

          <div class="rounded-lg bg-gradient-to-br from-green-500/10 to-green-600/10 p-6">
            <div class="mb-2 text-3xl font-bold text-green-600 dark:text-green-400">Process Driven</div>
            <div class="text-lg font-semibold text-gray-800 dark:text-gray-200">Documentation & Clarity</div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Maintained clear documentation and structured workflows for team efficiency
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Technical Stacks -->
  <section class="py-12">
    <div class="container mx-auto">
      <Heading level="h2" gradient floating backplate client:idle>Technical Understanding</Heading>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
        {tpmStacks.map((stack, index) => (
          <StackCard {...stack} parentIndex={index} client:load />
        ))}
      </div>
    </div>
  </section>

  <!-- Skills Chart -->
  <section class="py-12">
    <div class="container mx-auto">
      <Heading level="h2" gradient floating backplate client:idle>Product Management Skills</Heading>
      <SkillChart 
        data={[tpmChart]} 
        chartData={tpmChart} 
        client:load 
      />
    </div>
  </section>

  <!-- Development Tools -->
  <ToolsList />

  <!-- Development Process -->
  <section class="py-12">
    <div class="container mx-auto">
      <Heading level="h2" gradient floating backplate client:idle>Product Development Process</Heading>
      <ProcessFlowDiagram client:load />
    </div>
  </section>

  <!-- Call to Action -->
  <section class="container mx-auto px-4 py-16">
    <div class="gradient-bg rounded-lg py-12 text-center">
      <h3 class="mb-6 text-4xl text-gray-600 dark:text-gray-100">Ready to build products with technical excellence?</h3>
      <a
        href="/contact"
        class="inline-flex items-center rounded-lg bg-primary-600 px-6 py-3 text-white transition-colors hover:bg-primary-700"
      >
        Get in Touch
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>
