---
import "../styles/index.css";
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/hero/PageHero.astro";
import ServiceList from "../components/services/ServiceList.astro";
import ServiceDetails from "../components/FullScroll";
---

<Layout title="Services">
	<PageHero title="Services" subtitle="Comprehensive solutions tailored to your needs" />

	<div class="py-20">
		<ServiceDetails client:load />
		<div class="container mx-auto px-4 py-4">
			<div class="gradient-bg mt-[100vh] rounded-lg py-8 text-center">
				<h3 class="mb-6 text-4xl text-gray-600 dark:text-gray-100">Ready to start next project?</h3>
				<a
					href="/contact"
					class="inline-flex items-center rounded-lg bg-primary-600 px-6 py-3 text-white transition-colors hover:bg-primary-700"
				>
					Get in Touch
					<svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
					</svg>
				</a>
			</div>
		</div>
	</div>
</Layout>
