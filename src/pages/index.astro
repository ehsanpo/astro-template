---
import "../styles/index.css";
import Layout from "../layouts/Layout.astro";
import Testimonials from "../components/sections/Testimonials.astro";
import Awards from "../components/sections/Awards.astro";
import Certificates from "@/blocks/Certificates.astro";
import ClientMarquee from "../components/clients/ClientMarquee.astro";
import { getPortfolioData } from "../utils/data";
import HeroBlock from "@/blocks/HeroBlock.astro";
import SelectedWorkBlock from "@/blocks/SelectedWorkBlock.astro";
import TechStackBlock from "@/blocks/TechStackBlock.astro";

const { contact, stacks } = await getPortfolioData();
---

<Layout title="Portfolio - Home">
  <HeroBlock contact={contact} />
  <SelectedWorkBlock stacks={stacks} />
  <TechStackBlock stacks={stacks} />
  <Certificates />
  <Testimonials />
  <ClientMarquee />
  <Awards />
</Layout>
