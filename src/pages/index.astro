---
import "../styles/index.css";
import Layout from "../layouts/Layout.astro";
import Testimonials from "@/blocks/TestimonialsBlock.astro";
import Awards from "@/blocks/AwardsBlock.astro";
import Certificates from "@/blocks/CertificatesBlock.astro";
import ClientMarquee from "../components/clients/ClientMarquee.astro";
import { getPortfolioData } from "../utils/data";
import HeroBlock from "@/blocks/HeroBlock.astro";
import SelectedWorkBlock from "@/blocks/SelectedWorkBlock.astro";
import TechStackBlock from "@/blocks/TechStackBlock.astro";
import BlogBlock from "@/blocks/BlogBlock.astro";

const { stacks } = await getPortfolioData();
---

<Layout title="Ehsan Pourhadi - Digital developer">
	<HeroBlock />
	<SelectedWorkBlock stacks={stacks} />
	<TechStackBlock stacks={stacks.slice(0, 3)} />
	<Certificates />
	<Testimonials />
	<Awards />
	<BlogBlock />
	<ClientMarquee />
</Layout>
