---
import Layout from "../layouts/Layout.astro";
import SkillChart from "../components/SkillChart";
import StackCard from "../components/StackCard";
import RankTimeline from "@/components/RankTimeline";
import { MagicCard } from "@/components/ui/magic-card";
import { getPortfolioData } from "@/utils/data";
import Certificates from "@/blocks/CertificatesBlock.astro";
import ToolsList from "@/components/skills/ToolsList.astro";
import PageHero from "@/components/hero/PageHero.astro";
import TechStackBlock from "@/blocks/TechStackBlock.astro";
import { Heading } from "@/components/ui/heading";
import { ProcessFlowDiagram } from "@/components/Beams";

const { stacks, charts } = await getPortfolioData();
---

<Layout title="Skills - Developer Portfolio">
  <PageHero
    title="Skills & Tools"
    subtitle="My technical expertise and proficiency across different technologies"
  />
  <TechStackBlock stacks={stacks} />
  <Heading level="h2" gradient floating backplate client:idle
    >Skills Chart</Heading
  >

  <SkillChart data={stacks} chartData={charts[0]} client:load />

  <section class="">
    <div class="container mx-auto">
      <Heading level="h2" gradient floating backplate client:idle
        >Tech Timeline
      </Heading>
      <RankTimeline />
    </div>
  </section>

  <ToolsList />
  <Heading level="h2" gradient floating backplate client:idle
    >Development Process</Heading
  >
  <ProcessFlowDiagram client:load />
  <Certificates />
</Layout>
