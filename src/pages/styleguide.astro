---
import Layout from "../layouts/Layout.astro";
import { Heading } from "../components/ui/heading";
import { Card } from "../components/ui/card";
import ServiceCard from "../components/services/ServiceCard.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";

const colors = [
  {
    name: "primary",
    shades: [50, 100, 200, 300, 400, 500, 600, 700, 800, 900],
  },
];

const typography = [
  { tag: "h1", text: "Heading 1", class: "text-4xl" },
  { tag: "h2", text: "Heading 2", class: "text-3xl" },
  { tag: "h3", text: "Heading 3", class: "text-2xl" },
  { tag: "p", text: "Body text", class: "text-base" },
];
---

<Layout title="Styleguide">
  <div class="container mx-auto px-4 py-20">
    <SectionTitle
      title="Styleguide"
      subtitle="Design system and component library"
    />

    <!-- Colors -->
    <section class="mb-16">
      <Heading level="h2" className="mb-8">Colors</Heading>
      <div class="space-y-8">
        {
          colors.map((color) => (
            <div>
              <h3 class="text-lg font-semibold mb-4">{color.name}</h3>
              <div class="grid grid-cols-10 gap-4">
                {color.shades.map((shade) => (
                  <div>
                    <div class={`h-20 rounded-lg bg-${color.name}-${shade}`} />
                    <p class="text-sm mt-2">{shade}</p>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Typography -->
    <section class="mb-16">
      <Heading level="h2" className="mb-8">Typography</Heading>
      <div class="space-y-8">
        {
          typography.map((item) => (
            <div>
              <div class={item.class}>{item.text}</div>
              <p class="text-sm text-gray-500 mt-2">{item.class}</p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Components -->
    <section class="mb-16">
      <Heading level="h2" className="mb-8">Components</Heading>

      <!-- Cards -->
      <div class="grid grid-cols-2 gap-8 mb-8">
        <Card title="Basic Card" subtitle="Card component example">
          This is a basic card component with a title and content.
        </Card>

        <ServiceCard
          title="Service Card"
          description="Example service description"
          icon="ðŸ’¡"
          features={["Feature 1", "Feature 2"]}
        />
      </div>

      <!-- Buttons -->
      <div class="space-x-4">
        <button
          class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg transition-colors"
        >
          Primary Button
        </button>
        <button
          class="border border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-6 py-3 rounded-lg transition-colors"
        >
          Secondary Button
        </button>
      </div>
    </section>
  </div>
</Layout>
