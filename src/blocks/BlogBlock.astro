---
import { getBlogPosts } from "../utils/data";
import { BlogCard } from "../components/blog/BlogCard";

const blogPosts = await getBlogPosts();
const latestPosts = blogPosts.slice(0, 3);
---

{
  latestPosts.length > 0 && (
    <section class="py-20 bg-gray-50 dark:bg-neutral-900">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Latest Blog Posts
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Insights, tutorials, and thoughts on web development and technology.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {latestPosts.map((post) => (
            <BlogCard post={post} client:load />
          ))}
        </div>

        <div class="text-center">
          <a
            href="/blog"
            class="inline-flex items-center px-8 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors text-lg font-medium"
          >
            View All Posts
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          </a>
        </div>
      </div>
    </section>
  )
}
